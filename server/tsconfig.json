{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": true,
        "moduleResolution": "node",
        "strict": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
